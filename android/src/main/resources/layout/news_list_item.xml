<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/activity_default_margin">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp"
            android:background="#ffffff">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blog_title"
                android:background="#1e6dc8"
                android:text="SAMPLE TITLE"
                android:textColor="#ffffff"
                android:padding="@dimen/activity_default_margin"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blog_date"
                android:background="#ffffff"
                android:text="SAMPLE DATE"
                android:textColor="#575757"
                android:padding="@dimen/activity_default_margin"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blog_content"
                android:background="#ffffff"
                android:text="This is a crazy long and unnecessary line of text \nJust so i can see the layout in the preview"
                android:textColor="#1e6dc8"
                android:padding="@dimen/activity_default_margin"/>

    </LinearLayout>

</LinearLayout>